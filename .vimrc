""plugins: NERDTree, browser

""in ~/$ & ~/# run:
""
""  mkdir -p ~/.vim/tmp/; wget https://raw2.github.com/ryanpcmcquen/linuxTweaks/master/.vimrc -P ~/
""

set tabstop=2
set shiftwidth=2
set softtabstop=2
set smarttab
set expandtab

set encoding=utf-8
set fileencoding=utf-8
set number
syntax off
set cursorline
set backupdir=~/.vim/tmp/
set directory=~/.vim/tmp/

