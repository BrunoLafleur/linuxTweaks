" plugins: NERDTree, browser
set tabstop=2
set shiftwidth=2
set softtabstop=2
set smarttab
set expandtab

set encoding=utf-8
set fileencoding=utf-8
set number
syntax on
set cursorline
set cursorcolumn

"run {{#/$ mkdir -p ~/.vim/tmp/}} for this to work
set backupdir=~/.vim/tmp/
set directory=~/.vim/tmp/

